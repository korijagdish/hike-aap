<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf8fa"
    android:orientation="vertical"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="73dp"
        android:layout_height="35dp"
        android:src="@drawable/hike"

        />
    <ImageView
        android:layout_width="73dp"
        android:layout_marginLeft="230dp"
        android:layout_height="35dp"
        android:src="@drawable/ball"

        />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:background="#fefafcfc"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        >

        <ImageView
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_add_a_photo_black_24dp" />

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Stories disappear in 24 hrs"
                android:textColor="#fb737474"
                android:textSize="15dp" />


            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="ADD YOUR STORY"
                android:textColor="#fdf74160"
                android:textSize="10dp" />



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:orientation="horizontal">

        <EditText

            android:layout_width="298dp"
            android:layout_height="38dp"
            android:layout_marginTop="2dp"
            android:background="#fcfeffff"
            android:hint="what are you up to" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            android:background="#fcfdfdfd"
            android:src="@drawable/ic_image_black_24dp" />

    </LinearLayout>




    <GridView

        android:layout_marginTop="5dp"
        android:id="@+id/hike_Gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fafcfc">


    </GridView>


</LinearLayout>


