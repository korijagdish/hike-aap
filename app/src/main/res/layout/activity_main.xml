<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    tools:context=".MainActivity">




  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/round_images"
        android:layout_width="61dp"
        android:layout_height="47dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/boy1"

        />

      <LinearLayout
          android:layout_width="224dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp"
          android:orientation="vertical">

          <TextView
              android:id="@+id/text_Hike1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="4dp"

              android:fontFamily="sans-serif-condensed"
              android:text="jagdish kori"
              android:textColor="#fd111212"
              android:textSize="20dp" />


          <TextView
              android:id="@+id/text_Hike2"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="3dp"
              android:layout_marginTop="1dp"
              android:fontFamily="sans-serif-condensed"
              android:gravity="left"
              android:text="22 hrs"
              android:textColor="#fd919090"
              android:textSize="15dp" />


      </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        />


  </LinearLayout>
  <TextView
      android:id="@+id/text_Hike3"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="1dp"
      android:fontFamily="serif"
      android:gravity="left"
      android:text="Changed Profile Picture"
      android:textColor="#fd1a1919"
      android:textSize="15dp" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="90dp"
      android:layout_marginTop="12dp"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/rount_boys2"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:src="@drawable/boy3" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginLeft="20dp"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:src="@drawable/r" />

    <ImageView
        android:id="@+id/rount_boys3"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:src="@drawable/comment1" />

    <ImageView
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:src="@drawable/right" />

  </LinearLayout>
  <LinearLayout
      android:layout_width="287dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:orientation="vertical">

    <TextView
        android:id="@+id/text_Hike4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="75 Likes   2 comments"
        android:textColor="#1a1919"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/text_Hike5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="jagdish kori : thanks Rohit....."
        android:textColor="#262525"
        android:textSize="18dp" />



  </LinearLayout>


  </LinearLayout>
